<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/favourites_relative"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavouritesActivity"
    android:orientation="vertical"
    android:background="@drawable/favourites_background">

    <ScrollView
        android:id="@+id/favourites_scrollView"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp">

    <LinearLayout
        android:id="@+id/favourites_vertical"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:paddingBottom="30dp">

    </LinearLayout>

    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_text"
        android:onClick="removeFavourites"
        android:layout_below="@+id/favourites_scrollView"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>